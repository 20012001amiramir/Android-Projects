<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DescActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/ex_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Title"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ex_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ex_title"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ex_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Description"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/ex_image"
            tools:layout_editor_absoluteX="20dp" />

        <!--<include
        layout="@layout/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex_description" />-->
        <Button
            android:id="@+id/TmStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TmTimeView" />

        <Button
            android:id="@+id/TmStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="@+id/TmStopButton"
            app:layout_constraintEnd_toEndOf="@+id/TmTimeView"
            app:layout_constraintStart_toEndOf="@+id/TmStopButton"
            app:layout_constraintTop_toTopOf="@+id/TmStopButton" />

        <Button
            android:id="@+id/TmResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            app:layout_constraintBottom_toBottomOf="@+id/TmStopButton"
            app:layout_constraintEnd_toStartOf="@+id/TmStopButton"
            app:layout_constraintStart_toStartOf="@+id/TmTimeView"
            app:layout_constraintTop_toTopOf="@+id/TmStopButton" />

        <TextView
            android:id="@+id/TmTimeView"
            android:layout_width="334dp"
            android:layout_height="60dp"
            android:text="00 : 00 : 00 . 000"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TmMTSButton" />

        <Button
            android:id="@+id/TmPUSButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="+1 s"
            app:layout_constraintBottom_toTopOf="@+id/TmMUSButton"
            app:layout_constraintStart_toEndOf="@+id/TmPTSButton" />

        <Button
            android:id="@+id/TmMUSButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1 s"
            app:layout_constraintBottom_toTopOf="@+id/TmTimeView"
            app:layout_constraintEnd_toEndOf="@+id/TmTimeView" />

        <Button
            android:id="@+id/TmMTSButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="- 10 s"
            app:layout_constraintStart_toEndOf="@+id/TmMUMButton"
            tools:layout_editor_absoluteY="463dp" />

        <Button
            android:id="@+id/TmMUMButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1 m"
            app:layout_constraintBottom_toTopOf="@+id/TmTimeView"
            app:layout_constraintStart_toStartOf="@+id/TmTimeView" />

        <Button
            android:id="@+id/TmPTSButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="+ 10 s"
            app:layout_constraintBottom_toTopOf="@+id/TmMTSButton"
            app:layout_constraintStart_toEndOf="@+id/TmPUMButton" />

        <Button
            android:id="@+id/TmPUMButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 1 m"
            app:layout_constraintBottom_toTopOf="@+id/TmMUMButton"
            app:layout_constraintStart_toStartOf="@+id/TmTimeView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>